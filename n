  <script>
    // Animação simples: mudar a cor de fundo aos poucos
    const cores = ["#4facfe", "#43e97b", "#fa709a", "#fee140"];
    let i = 0;
    setInterval(() => {
      document.body.style.background = 
        `linear-gradient(120deg, ${cores[i]}, ${cores[(i+1)%cores.length]})`;
      i = (i+1) % cores.length;
    }, 4000);
  </script>
